// globals
body
    margin          0em
    font-family     'Helvetica', sans-serif
    padding-bottom  1em

h1
    font-weight 300
    margin-left 2em
    color       rgb(70, 70, 70)

h2
    font-size       18pt
    width           100%
    text-align      center
    font-weight     300


.cards-list
    display flex
    justify-content space-around
    flex-wrap wrap

.card
    width 250px
    height 250px
    border-radius 125px
    overflow auto
    display flex
    flex-direction column
    justify-content space-around;
    position relative

    span
        text-align center
        z-index 10

    .background-container
        position absolute
        width 100%
        height 100%
        top 0
        left 0
        z-index 1

.status-done
    background-color green
.status-doing
    background-color orange
.status-todo
    background-color red
.status-dropped
    background-color grey

.timeline
    text-align center

    *
        display inline-block
        margin 0 10px
